#include <iostream>
#include <string>
#include <fstream>

using namespace std;
int main()
{
	fstream MyFile;

	MyFile.open("MyFile.txt", ios::out | ios::app ); //Append Mode

	if (MyFile.is_open())
	{
		MyFile << "Hi, alHamdullah 3la kle she\n";
		MyFile << "Hi, allahm sle 3la sedna mohammad\n";
		MyFile << "Hy, sob7an allah\n";

		MyFile.close();
	}

}
