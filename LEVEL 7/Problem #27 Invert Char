#include <iostream>
#include <string>

using namespace std;

char ReadCharacter()
{
	char c1;
	cout << "Please Enter a Character?" << endl;
	cin >> c1;

	return c1;
}

char InvertChar(char s1)
{
	if (s1 == tolower(s1))
		s1 = toupper(s1);
	else
	    s1 = tolower(s1);

	return s1;
}


int main()
{
	char c1 = ReadCharacter();

	c1 = InvertChar(c1);
	
	cout << "Char after inverting case:" << endl;
	cout << c1;
	
}
